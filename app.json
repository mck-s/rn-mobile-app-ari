{
  "expo": {
    "name": "Ari Baby Logger",
    "slug": "ari",
    "scheme": "ari",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,

    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mck.ari",
      "buildNumber": "1"
    },

    "android": {
      "package": "com.mck.ari",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["INTERNET"],
      "edgeToEdgeEnabled": true
    },

    "plugins": ["expo-router"]
  }
}
